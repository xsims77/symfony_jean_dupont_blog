{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block main %}
    <main class="container-fluid">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="text-center my-3 display-5 mt-5">Réinitialisation du mot de passe</h1>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    {{ form_start(requestForm) }}
                        <div class="mb-3">
                            <label class="reset_password_request_form_email">Email</label>
                            <div class="text-danger">{{ form_errors(requestForm.email) }}</div>
                            {{form_widget(requestForm.email, {'attr': {'class':'form-control'}})}}
                        </div>
                        <div>
                            <small>
                                Entrez votre adresse email, et nous vous enverrons un lien pour la réinitialisation du mot de passe.
                            </small>
                        </div>
                        <div class="mb-3">
                        <input type="submit" class="btn btn-primary"></div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </main>

{% endblock %}
