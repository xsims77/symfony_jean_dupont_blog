{% extends "themes/base_admin.html.twig" %}

{% block title %}le blog de Jean Dupont - Admin- Modifier l'article{% endblock %}

{% block description %}Le blog de Jean Dupont - Admin - Modifier l'article{% endblock %}

{% block tinyMCE %}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea#post_form_content'
  });
</script>
{% endblock %}

{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(document).ready(function() {
            $('#post_form_tags').select2();
        });
    </script>
{% endblock %}

{% block select2 %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modification de l'article</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-10 mx-auto">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="post_form_title">Titre</label>
                        <div class="text-danger">{{ form_errors(form.title) }}</div>
                        {{form_widget(form.title, {'attr': {'class': 'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="post_form_category">Cat√©gorie</label>
                        <div class="text-danger">{{ form_errors(form.category) }}</div>
                        {{form_widget(form.category, {'attr': {'class': 'form-control'}})}}
                    </div>
                     <div class="mb-3">
                        <label for="post_form_tags">Tags</label>
                        <div class="text-danger">{{ form_errors(form.tags) }}</div>
                        {{form_widget(form.tags, {'attr': {'class': 'form-control'}})}}
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6 text-center">
                            {% if post.image %}
                                <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_thumbnail') }}" alt="{{ post.title }}" width="150" height="150">
                            {% else %}
                                <p>Pas d'image disponible</p>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <label for="post_form_imageFile">Image</label>
                            <div class="text-danger">{{ form_errors(form.imageFile) }}</div>
                            {{form_widget(form.imageFile, {'attr': {'class': 'form-control mb-3 mt-1'}})}}
                        </div>
                    </div>
                    <div class="mb-3">
                    <div class="text-danger">{{ form_errors(form.content) }}</div>
                        <label for="post_form_content">Contenu</label>
                        {{form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 10}})}}
                    </div>
                    <div class="mb-3">
                        <input formnovalidate type="submit" class="btn btn-primary shadaow" value="Modifier et Sauvegarder"> 
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}