{% extends "themes/base_admin.html.twig" %}

{% block title %}Le blog de Jean Dupont - Admin - Modification des paramètres du site{% endblock %} 

{% block description %}Le blog de Jean Dupont - Admin - Modification des paramètres du site{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modification des paramètres du site</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto shadow p-4">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="edit_setting_form_email">Email</label>
                        <div class="text-danger">{{form_errors(form.email)}}</div>
                        {{form_widget(form.email, {'attr': {'class': 'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="edit_setting_form_phone">Numéro de téléphone</label>
                        <div class="text-danger">{{form_errors(form.phone)}}</div>
                        {{form_widget(form.phone, {'attr': {'class': 'form-control'}})}}
                    </div>
                    <div>
                        <input formnovalidate type="submit" class="btn btn-primary">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}