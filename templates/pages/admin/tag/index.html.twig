{% extends "themes/base_admin.html.twig" %}

{% block title %}le blog de Jean Dupont - Admin- Liste des tags{% endblock %}


{% block description %}Le blog de Jean Dupont - Admin - Liste des tags{% endblock %}

{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block dataTables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet"> 
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
        
    <script>
    $(document).ready( function () {
        $('#table').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json',
            },
        });
    } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des tags</h1>

    {% for message in app.flashes("success") %}
        <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes("warning") %}
        <div class="text-center alert alert-warning alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{ path('admin.tag.create') }}" class="btn btn-primary shadow"><i class="fa-solid fa-plus mx-1"></i>Nouveau tag</a>
    </div>

    <div class="table-responsive">
        <table id="table" class="table table-striped table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Créé le : </th>
                    <th>Modifié le : </th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <td>{{tag.id}}</td>
                        <td>{{tag.name}}</td>
                        <td>{{tag.slug}}</td>
                        <td>{{tag.createdAt|date('d-m-y')}}</td>
                        <td>{{tag.updatedAt|date('d-m-y')}}</td>
                        <td>
                            <a title="Modifier" href="{{ path('admin.tag.edit', {'id': tag.id}) }}" class="btn btn-primary m-1"><i class="fa-solid fa-paintbrush mx-1"></i>Modifier</a>
                            <a onclick="event.preventDefault(); confirm('Vous allez supprimer le tag, pour continuer appuyer sur valider') && document.querySelector('#form_delete_tag_{{tag.id}}').submit()" href="#" class="btn btn-danger m-1" ><i class="fa-solid fa-trash-can mx-1"></i>Supprimer</a>
                            <form method="POST" id="form_delete_tag_{{tag.id}}" action="{{ path('admin.tag.delete', {'id': tag.id}) }}">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('delete_tag_'~tag.id)}}">
                                <input type="hidden" name="_method" value="DELETE">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}