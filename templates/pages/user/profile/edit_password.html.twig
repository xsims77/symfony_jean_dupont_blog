{% extends "themes/base_user.html.twig" %}

{% block title %}le blog de Jean Dupont - Espace utilisateur - Modifier du mot de passe {% endblock %}

{% block description %}Le blog de Jean Dupont - Espace utilisateur - Modifier du mot de passe {% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modification du mot de passe</h1>

    <div class="container mt-5 mb-5">
        <div class="col-md-6 mx-auto shadow p-4">
            {{form_start(form)}}
                <div class="mb-3">
                    <label for="">Mot de passe actuel</label>
                    <div class="text-danger">{{form_errors(form.currentPassword)}}</div>
                    {{form_widget(form.currentPassword, {'attr': {'class': 'form-control'}})}}
                </div>
                <div class="mb-3">
                    <label for="">Nouveau mot de passe</label>
                    <div class="text-danger">{{form_errors(form.password.first)}}</div>
                    {{form_widget(form.password.first, {'attr': {'class': 'form-control'}})}}
                </div>
                <div class="mb-3">
                    <label for="">Confirmation du nouveau mot de passe actuel</label>
                    <div class="text-danger">{{form_errors(form.password.second)}}</div>
                    {{form_widget(form.password.second, {'attr': {'class': 'form-control'}})}}
                </div>
                <div>
                    <input formnovalidate type="submit" class="btn btn-primary" value="Modifier">
                </div>
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}